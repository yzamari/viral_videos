# =============================================================================
# VIRAL AI VIDEO GENERATOR - ENVIRONMENT CONFIGURATION
# =============================================================================

# Core API Keys
GOOGLE_API_KEY=your_google_ai_studio_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT_ID=viralgen-464411
GOOGLE_CLOUD_LOCATION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account-key.json

# VEO Video Generation
VEO_PROJECT_ID=viralgen-464411
VEO_LOCATION=us-central1
USE_REAL_VEO2=true
VEO_FALLBACK_ENABLED=true

# Google Cloud TTS Configuration
GOOGLE_TTS_VOICE_TYPE=en-US-Neural2-F
GOOGLE_TTS_ENABLED=true
GOOGLE_TTS_FALLBACK_TO_GTTS=true

# Audio Generation Settings
DEFAULT_AUDIO_FEELING=excited
DEFAULT_AUDIO_NARRATIVE=energetic
AUDIO_SAMPLE_RATE=24000
AUDIO_EFFECTS_PROFILE=headphone-class-device

# Video Generation Settings
DEFAULT_VIDEO_DURATION=15
DEFAULT_PLATFORM=youtube
DEFAULT_CATEGORY=Comedy
DEFAULT_FRAME_CONTINUITY=true

# AI Agent Discussion Settings
DEFAULT_DISCUSSION_MODE=standard
MAX_DISCUSSION_ROUNDS=3
DISCUSSION_CONSENSUS_THRESHOLD=0.5
DISCUSSION_TIMEOUT_SECONDS=60
ENABLE_DISCUSSION_LOGGING=true

# Agent Configuration
TOTAL_AI_AGENTS=25
DISCUSSION_PHASES=5
ENABLE_ENHANCED_ORCHESTRATION=true

# Output Settings
OUTPUT_DIRECTORY=outputs
CLIPS_DIRECTORY=clips
LOGS_DIRECTORY=logs
ENABLE_COMPREHENSIVE_LOGGING=true

# Performance Settings
MAX_CONCURRENT_GENERATIONS=3
VIDEO_RENDER_THREADS=4
AUDIO_PROCESSING_THREADS=2

# Development Settings
DEBUG_MODE=false
VERBOSE_LOGGING=false
ENABLE_PERFORMANCE_METRICS=true
CLEANUP_TEMP_FILES=true

# Platform Specific Settings
YOUTUBE_SHORTS_ASPECT_RATIO=9:16
TIKTOK_MAX_DURATION=60
INSTAGRAM_REELS_MAX_DURATION=90
TWITTER_VIDEO_MAX_DURATION=140

# Quality Settings
VIDEO_QUALITY=high
AUDIO_QUALITY=high
COMPRESSION_LEVEL=medium
TARGET_FILE_SIZE_MB=50

# Backup and Fallback Settings
ENABLE_FALLBACK_GENERATION=true
FALLBACK_TO_PLACEHOLDER=true
BACKUP_SESSIONS=true
AUTO_RETRY_FAILED_GENERATIONS=true 