# ðŸš€ AI Video Generator - Production Environment Configuration
# Copy this file to .env and update with your actual values

# ================================
# CORE APPLICATION SETTINGS
# ================================

# Environment (development, staging, production)
ENVIRONMENT=production

# Logging configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Application settings
APP_NAME="AI Video Generator"
APP_VERSION="2.2.0"
DEBUG=false

# ================================
# GOOGLE AI & VERTEX AI SETTINGS
# ================================

# Google AI Studio API Key (required)
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# Vertex AI Configuration (required for VEO2)
VERTEX_AI_PROJECT_ID=your_vertex_project_id
VERTEX_AI_LOCATION=us-central1
VERTEX_AI_GCS_BUCKET=your_gcs_bucket_name

# Service Account Key (optional, for enhanced security)
GOOGLE_APPLICATION_CREDENTIALS=/app/config/service-account-key.json

# ================================
# DATABASE CONFIGURATION
# ================================

# PostgreSQL (for session metadata)
POSTGRES_PASSWORD=your_secure_postgres_password
DATABASE_URL=postgresql://viralai:${POSTGRES_PASSWORD}@postgres:5432/viralai

# Database connection pool settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# ================================
# CACHING CONFIGURATION
# ================================

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=your_redis_password

# Cache settings
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_SIZE=1000
CACHE_STRATEGY=lru

# ================================
# SESSION MANAGEMENT
# ================================

# Session configuration
SESSION_CLEANUP_INTERVAL=3600
SESSION_MAX_AGE=86400
SESSION_STORAGE_PATH=/app/outputs

# ================================
# MONITORING & PERFORMANCE
# ================================

# Monitoring settings
MONITORING_ENABLED=true
METRICS_INTERVAL=30
PERFORMANCE_TRACKING=true

# Performance thresholds
CPU_THRESHOLD=80.0
MEMORY_THRESHOLD=85.0
DISK_THRESHOLD=90.0
API_RESPONSE_THRESHOLD=10.0
GENERATION_TIME_THRESHOLD=300.0

# ================================
# SECURITY SETTINGS
# ================================

# API Security
API_RATE_LIMIT=60
API_BURST_LIMIT=10
API_KEY_REQUIRED=false

# CORS settings
CORS_ENABLED=true
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com
CORS_METHODS=GET,POST,PUT,DELETE
CORS_HEADERS=Content-Type,Authorization,X-API-Key

# Security headers
SECURITY_HEADERS_ENABLED=true

# ================================
# BACKUP CONFIGURATION
# ================================

# Backup settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/app/backups

# External backup storage (optional)
AWS_S3_BUCKET=your_backup_bucket
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# ================================
# NOTIFICATION SETTINGS
# ================================

# Email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@your-domain.com

# Slack notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# PagerDuty integration
PAGERDUTY_INTEGRATION_KEY=your_pagerduty_key

# ================================
# GRAFANA & PROMETHEUS
# ================================

# Grafana admin password
GRAFANA_PASSWORD=your_secure_grafana_password

# Prometheus configuration
PROMETHEUS_RETENTION=200h
PROMETHEUS_SCRAPE_INTERVAL=15s

# ================================
# RESOURCE LIMITS
# ================================

# Application resource limits
MAX_MEMORY_MB=4096
MAX_DISK_GB=100
MAX_GENERATION_TIME=600
MAX_CONCURRENT_SESSIONS=10

# Worker configuration
MAX_WORKERS=4
THREAD_POOL_SIZE=8
ASYNC_PROCESSING=true

# ================================
# STORAGE PATHS
# ================================

# Data storage paths (for bind mounts)
OUTPUTS_PATH=./data/outputs
LOGS_PATH=./data/logs
CACHE_PATH=./data/cache
BACKUPS_PATH=./data/backups

# ================================
# NETWORK CONFIGURATION
# ================================

# Application ports
APP_PORT=7860
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Internal service ports
REDIS_PORT=6379
POSTGRES_PORT=5432
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
ELASTICSEARCH_PORT=9200
KIBANA_PORT=5601

# ================================
# SSL/TLS CONFIGURATION
# ================================

# SSL settings
SSL_ENABLED=false
SSL_CERT_PATH=/app/ssl/cert.pem
SSL_KEY_PATH=/app/ssl/key.pem
SSL_REDIRECT=true

# Let's Encrypt (optional)
LETSENCRYPT_EMAIL=your_email@domain.com
LETSENCRYPT_DOMAIN=your-domain.com

# ================================
# DEVELOPMENT SETTINGS
# ================================

# Development mode settings (only for development)
DEV_MODE=false
HOT_RELOAD=false
DEBUG_TOOLBAR=false

# ================================
# FEATURE FLAGS
# ================================

# Feature toggles
FEATURE_VEO2_ENABLED=true
FEATURE_VEO3_ENABLED=false
FEATURE_MULTILINGUAL=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_BATCH_PROCESSING=false

# ================================
# EXTERNAL INTEGRATIONS
# ================================

# YouTube API (optional)
YOUTUBE_API_KEY=your_youtube_api_key

# Twitter API (optional)
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret

# TikTok API (optional)
TIKTOK_API_KEY=your_tiktok_api_key

# ================================
# CUSTOM CONFIGURATION
# ================================

# Custom environment variables
CUSTOM_VAR_1=value1
CUSTOM_VAR_2=value2

# Organization settings
ORGANIZATION_NAME="Your Organization"
ORGANIZATION_URL="https://your-organization.com"
SUPPORT_EMAIL="support@your-organization.com"

# ================================
# HEALTH CHECK SETTINGS
# ================================

# Health check configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# ================================
# LOGGING CONFIGURATION
# ================================

# Log aggregation
LOG_AGGREGATION_ENABLED=true
ELASTICSEARCH_URL=http://elasticsearch:9200
LOGSTASH_HOST=logstash
LOGSTASH_PORT=5000

# Log retention
LOG_RETENTION_DAYS=30
LOG_ROTATION_SIZE=100MB
LOG_ROTATION_COUNT=10 